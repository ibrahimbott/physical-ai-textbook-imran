{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/chat",
            "destination": "/api/index.py"
        },
        {
            "source": "/api/:path*",
            "destination": "/api/index.py"
        },
        {
            "source": "/chat",
            "destination": "/api/index.py"
        },
        {
            "source": "/(.*)",
            "destination": "/frontend-book/$1"
        }
    ],
    "functions": {
        "api/*.py": {
            "maxDuration": 60,
            "includeFiles": "frontend-book/docs/**/*"
        }
    }
}